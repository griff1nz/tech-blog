<div class="w-10/12 border-2 border-black mx-auto p-3 mt-2 rounded-sm">
    <form id="signup-form">
        <div class="flex flex-col p-4 mx-auto m-4">
            <div class="flex justify-between mb-2">
                <label for="email">Email:</label>
                <input id="email" type="text" class="border-2 border-black w-10/12 bg-zinc-400" />
            </div>
            <div class="flex justify-between mb-2">
                <label for="username">Username:</label>
                <input id="username" type="text" class="border-2 border-black w-10/12 bg-zinc-400" />
            </div>
            <div class="flex justify-between mb-2">
                <label for="pass">Password:</label>
                <input id="pass" type="password" class="border-2 border-black w-10/12 bg-zinc-400" />
            </div>
        </div>
        <div class="mx-auto flex justify-center">
            <button type="submit" class="border border-black p-2 bg-stone-300 rounded-md hover:bg-stone-600 transition ease-in-out">Sign up</button>
        </div>
    </form>
</div>

<script src="./js/signup.js"></script>