<div class="p-2 m-2">
    <a href="/posts/{{id}}/">
        <div class="border-1 border-black bg-slate-200 mb-2">
            <div class="p-2 flex justify-between">
                <div>
                    <h1 class="sm:text-4xl text-2xl">{{title}}</h1>
                    <p class="sm:text-lg text-xs">{{comments.length}} comments</p>
                </div>
                <p class="sm:text-lg text-sm">{{date}}</p>
            </div>
        </div>
    </a>
    <div class="flex">
        {{!-- Lotta hover states --}}
        <button onClick="location.href = '/posts/{{id}}/delete';" class="mr-2 p-2 bg-red-500 rounded-md hover:bg-red-700 transition ease-in-out">Delete</button>
        <button onClick="location.href = '/posts/{{id}}/edit';" class="mr-2 p-2 bg-green-200 rounded-md hover:bg-green-500 transition ease-in-out">Edit</button>
    </div>
</div>